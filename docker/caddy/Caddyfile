https://bjacobel.com {
  gzip
  tls bjacobel@gmail.com
  header / Strict-Transport-Security "max-age=15552000"
  root /var/www/bjacobel.com/_site
  ext .html
  git {
    repo https://github.com/bjacobel/bjacobel.com.git
    path ../../../../tmp/bjacobel.com
    then cp -r /tmp/bjacobel.com/_site /var/www/bjacobel.com
    hook /jekyllbuild
  }
}
